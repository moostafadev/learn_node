doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/styles/global.css")
    title Products Page
  body 
    h1.bg-zinc-950.text-white.p-4.text-xl.font-bold.text-center.mb-8= pageTitle

    // Product list
    div.container.p-2
      ul
        each product in products
          li
            h3= product.title
            p= product.desc
            span= product.price
            a(href='/products/'+product.id) Veiw 